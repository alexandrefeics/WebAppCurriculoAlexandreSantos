@model Curriculo

<h2>Cadastro de  Curriculo</h2>

<form action="/Curriculo/Cadastro" method="post">

    <div class="panel panel-primary">
        <div class="panel-heading">1) Informações Pessoais</div>
        <div class="panel-body">

            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input type="text" class="form-control" id="Nome" name="Nome"  placeholder="Entre com o nome completo">
            </div>

            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="text" class="form-control" id="Email" name="Email" placeholder="Email principal">
            </div>

            <div class="form-group">
                <label for="DataNascimento">Data de Nascimento:</label>
                <input type="text" class="form-control" id="DataNascimento" name="DataNascimento"  placeholder="Formato dd/mm/aaaa. ex.: 16/06/1994">
            </div>

            <div class="form-group">
                <label for="Altura">Altura:</label>
                <input type="text" class="form-control" id="Altura" name="Altura"  placeholder="Ex. : 1.70">
            </div>

            <div class="form-group">
                <label for="Site">Site:</label>
                <input type="text" class="form-control" id="Site" name="Site"  placeholder=" ex.: Ex http:// www.SeuSite.com">
            </div>

            <div class="form-group">
                <label for="EstadoCivil">Estado Civil:</label>
                @*  <select class="form-control" id="EstadoCivil" name="EstadoCivil">
             <option value="">--Selecione--</option>
            <option value="1">Casado(a) </option>
            <option value="2">Solteiro(a) </option>
            <option value="3">Viúvo(a) </option>
        </select>*@

                <select class="form-control" 
                        asp-for="EstadoCivil" 
                        asp-items="Html.GetEnumSelectList<EstadoCivil>()">
                </select>

            </div>

            <div class="form-group">
                <label class="">
                    Sexo:
                </label>
                <label>
                    <input type="radio" name="Sexo" id="SexoFeminino" value="Femnino" />
                    Feminino
                </label>

        <label>
            <input type="radio" name="Sexo" id="SexoMasculino" value="Masculino" />
            Masculino
        </label>

                

            </div>


        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">2) Endereço </div>
        <div class="panel-body">

            <div class="form-group">
                <label for="CEP">CEP:</label>
                <input type="text" class="form-control" id="CEP" name="CEP"  placeholder=" ex.:78088-635 ">
            </div>

            <div class="form-group">
                <label for="Endereco">Endereço:</label>
                <input type="text" class="form-control" id="Endereco" name="Endereco" placeholder=" ex.:Rua x, bairro A próximo a y ">
            </div>



        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">3) Contato</div>
        <div class="panel-body">

            <div class="form-group">
                <label for="Telefone">Telefone:</label>
                <input type="text" class="form-control" id="Telefone" name="Telefone"  placeholder=" ex.:(65) 3665-0355 ">
            </div>

            <div class="form-group">
                <label for="Celular">Celular:</label>
                <input type="text" class="form-control" id="Celular" name="Celular"  placeholder=" ex.:(65) 98116-8713 ">
            </div>


        </div>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">4) Conhecimentos</div>
        <div class="panel-body">



            <div class="form-group">
                <div class="checkbox-inline">
                    <label>
                        <input type="checkbox" value="true" name="HTML" id="HTML">HTML
                    </label>

                </div>


                <div class="checkbox-inline">
                    <label>
                        <input type="checkbox" value="true" name="CSS" id="CSS">CSS
                    </label>

                    <div class="checkbox-inline">
                        <label>
                            <input type="checkbox" value="true" name="JavaScript" id="JavaScript">JavaScript
                        </label>

                    </div>

                </div>

                <div class="form-group">
                    <label for="MaisConhecimentos">Mais Conhecimentos: </label>
                    <textarea class="text" class="form-control" rows="10" id="MaisConhecimentos" name="MaisConhecimentos" > 
 
                    </textarea>
                </div>

            </div>

        </div>
    </div>

    <div class="text-right">
        <input id="btnCancelar" type="button" value="Cancelar" class="btn-danger"/>
   <input id="btnCadastro" type="submit" value="Salvar" class="btn btn-primary"/>
             
    </div>



</form>
